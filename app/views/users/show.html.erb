
<h1>This is <%= @user.email %>'s page </h1>

<% if user_signed_in? && @user != current_user %>
	<ul>
	  <li><%= friendship_status(current_user, @user) %>
	    <% unless Friendship.exists?(current_user, @user) %>
	      <%= link_to "Request friendship with #{@user.email}", 

	     
	        { :controller => "friendship", :action => "create", :id => @user.id}, :method => :post, :data => {:confirm => "Send friend request to #{@user.email}?" } %>


	    <% end %>
	  </li>
	</ul>
<% end %>